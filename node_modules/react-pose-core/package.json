{
  "name": "react-pose-core",
  "version": "0.5.0",
  "description": "Factory for creating flavours of React Pose",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "prettier": "prettier ./src/* --write",
    "prepublishOnly": "npm run test && npm run prettier && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Popmotion/popmotion/tree/master/packages/react-pose-core"
  },
  "keywords": [
    "animation",
    "dom",
    "declarative",
    "popmotion"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.12",
    "@types/react-native": "^0.55.4",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "prettier": "1.11.1",
    "ts-jest": "^22.4.5"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true
  },
  "dependencies": {
    "animated-pose": "^1.0.0",
    "hey-listen": "^1.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "../../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/_tests/.*\\.(ts|js)$",
    "rootDir": "src"
  }
}
